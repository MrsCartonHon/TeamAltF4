<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teamaltf4">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamAltF4">
        <activity android:name=".ViewForm"></activity>
        <activity
            android:name=".MessageActivity"
            android:label="@string/title_activity_message"
            android:theme="@style/Theme.TeamAltF4.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MessageBoard" />
        <activity android:name=".MainMessage" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".MessageBoard" />
        <activity android:name=".EditTab" />
        <activity android:name=".MessageBoard" />
        <activity android:name=".WeatherTab" />
        <activity android:name=".InformationTab" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>